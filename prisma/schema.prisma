generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model user {
  user_id  Int          @id @default(autoincrement())
  name     String       @unique @db.VarChar(50)
  password String
  email    String       @unique @db.VarChar(255)
  picture  String       @default("https://i.ibb.co/0jkPLQZ/avatar.png")
  teams    team_user[]
  repos    repo_user[]
  skills   user_skill[]
}

model team {
  team_id Int         @id @default(autoincrement())
  name    String      @unique @db.VarChar(50)
  picture String      @default("https://i.ibb.co/0jkPLQZ/avatar.png")
  users   team_user[]
  repos   repo_team[]
}

model team_user {
  user_id     Int
  team_id     Int
  role        String @db.VarChar(50)
  user        user?  @relation(fields: [userUser_id], references: [user_id])
  userUser_id Int?
  team        team?  @relation(fields: [teamTeam_id], references: [team_id])
  teamTeam_id Int?

  @@id([user_id, team_id])
}

model repo {
  repo_id Int         @id @default(autoincrement())
  name    String      @db.VarChar(50)
  users   repo_user[]
  teams   repo_team[]
}

model repo_user {
  user_id     Int
  repo_id     Int
  role        String @db.VarChar(50)
  user        user?  @relation(fields: [userUser_id], references: [user_id])
  userUser_id Int?
  repo        repo?  @relation(fields: [repoRepo_id], references: [repo_id])
  repoRepo_id Int?

  @@id([repo_id, user_id])
}

model repo_team {
  team    team @relation(fields: [team_id], references: [team_id])
  team_id Int
  repo    repo @relation(fields: [repo_id], references: [repo_id])
  repo_id Int

  @@id([repo_id, team_id])
}

model skill {
  skill_id    Int          @id @default(autoincrement())
  name        String       @db.VarChar(50)
  description String       @db.VarChar(300)
  users       user_skill[]
}

model user_skill {
  user     user  @relation(fields: [user_id], references: [user_id])
  user_id  Int
  skill    skill @relation(fields: [skill_id], references: [skill_id])
  skill_id Int

  @@id([user_id, skill_id])
}
