// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  user_id  Int         @id @default(autoincrement())
  name     String      @unique @db.VarChar(50)
  password String
  email    String      @unique @db.VarChar(255)
  picture  String      @default("https://i.ibb.co/0jkPLQZ/avatar.png")
  teams    team_user[]
  repos    repo_user[]
  skills   user_skill[]
}

model team {
  team_id Int         @id @default(autoincrement())
  name    String      @unique @db.VarChar(50)
  picture String      @default("https://i.ibb.co/0jkPLQZ/avatar.png")
  users   team_user[]
  repos   repo_team[]
}


model team_user {
  user    user @relation(fields: [user_id], references: [user_id])
  user_id Int
  team    team @relation(fields: [team_id], references: [team_id])
  team_id Int
  role    String  @db.VarChar(50)

  @@id([user_id, team_id])
}

model repo {
  repo_id Int         @id @default(autoincrement())
  name    String      @db.VarChar(50)
  type  Repo_type  @default(code)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  users   repo_user[]
  teams   repo_team[]
}

enum Repo_type {
  code
  design
}

model repo_user {
  user    user @relation(fields: [user_id], references: [user_id])
  user_id Int
  repo    repo @relation(fields: [repo_id], references: [repo_id])
  repo_id Int
  role    String  @db.VarChar(50)

  @@id([repo_id, user_id])
}

model repo_team {
  team   team @relation(fields: [team_id], references: [team_id])
  team_id Int
  repo    repo @relation(fields: [repo_id], references: [repo_id])
  repo_id Int

  @@id([repo_id, team_id])
}


model skill {
  skill_id Int         @id @default(autoincrement())
  name    String       @db.VarChar(50)
  description String  @db.VarChar(300)
  users  user_skill[]
}

model user_skill {
  user    user @relation(fields: [user_id], references: [user_id])
  user_id Int
  skill   skill @relation(fields: [skill_id], references: [skill_id])
  skill_id Int

  @@id([user_id, skill_id])
}